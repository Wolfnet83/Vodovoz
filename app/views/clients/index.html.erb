
<table class="table table-striped table-bordered table-condensed">
  <thead>
  <tr>
    <th>ID</th>
    <th><%= link_to 'Company', clients_path(sort_by:"company", :dir => ("desc" unless params[:dir].present?)) %></th> 
    <th><%= link_to 'Phone', clients_path(sort_by:"phone_number", :dir => ("desc" unless params[:dir].present?)) %></th>
    <th><%= link_to 'Contact', clients_path(sort_by:"contact", :dir => ("desc" unless params[:dir].present?)) %></th>
  </tr>
  </thead>
<% @clients.each do |client|%>
  <tr>
  <td><%= client.id %></td>
  <td><%= client.company %></td>
  <td><%= client.phone_number %></td>
  <td><%= client.contact %></td>
  <td><%= link_to 'Редактировать', edit_client_path(client) %></td>
  <td><%= link_to 'Удалить', client, confirm: "Точно?", method: :delete%></td>
  </tr>
<% end %>
</table>
