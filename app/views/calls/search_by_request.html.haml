%table.table.table-striped.table-bordered.table-condensed
  %thead
    %tr
      %th Дата
      %th Кто звонил
      %th Куда звонил
      %th Статус
      %th.span1 Продолжительность
      %th Запись
  - @calls.each do |call|
    %tr{:class => " #{call.linkname == "Прослушать" ? "success":"danger"}"}
      %td= call.calldate
      %td= call.clid
      %td= call.dst
      %td= call.disposition
      %td= call.duration
      %td= link_to call.linkname, call.link
-# = paginate @calls, theme: "twitter-bootstrap-3"
