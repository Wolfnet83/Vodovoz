<%=form_tag '/calls/index',:method => "get",:class => "well form-inline" do %>
  <%= label_tag(:call_from, "С даты", :class => "span3")%>
  <%= text_field_tag(:call_from, @date_from)%>
  <br>
  <%= label_tag(:call_to, "По дату", :class => "span3")%>
  <%= text_field_tag(:call_to, @date_to)%>
  <br>
  <%= label_tag(:src, "Кто звонил", :class => "span3")%>
  <%= text_field_tag(:src, @src)%>
  <br>
  <%= label_tag(:dst, "Куда звонил", :class => "span3")%>
  <%= text_field_tag(:dst, @dst)%>
  <%= submit_tag("Выбрать", :class => 'btn')%>
<% end %>

<%= paginate @calls %>

<table class="table table-striped table-bordered table-condensed">
  <thead>
  <tr>
    <th>Дата</th>
    <th>Кто звонил</th> 
    <th>Куда звонил</th>
    <th>Статус</th>
    <th class="span1">Продолжительность</th>
    <th>Запись</th>
  </tr>
  </thead>
<% @calls.each do |call|%>
  <tr>
  <td><%= call.calldate %></td>
  <td><%= call.src %></td>
  <td><%= call.dst %></td>
  <td><%= call.disposition %></td>
  <td><%= call.duration %></td>
  <td><%= link_to call.linkname,call.link, :target => :_blanc %></td>
  </tr>
<% end %>
</table>

<%= paginate @calls %>
