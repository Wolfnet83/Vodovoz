%nav.navbar.navbar-default
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{:type => "button", "data-target" => "#navbarCollapse", "data-toggle" => "collapse", "aria-expanded" => "false"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Телефония OM14200", calls_path, class: "navbar-brand"

    #navbarCollapse.collapse.navbar-collapse
      - if user_signed_in?
        %ul.nav.navbar-nav
          %li{ class: ("active" if current_page?(calls_path)) }
            = link_to "Таблица звонков",calls_path
          %li{ class: ("active" if current_page?(reports_path)) }
            = link_to "Отчеты", reports_path
          %li{ class: ("active" if current_page?(clients_path)) }
            = link_to "Справочник клиентов", clients_path
          %li{ class: ("active" if current_page?(search_requests_path)) }
            = link_to "Поисковые запросы", search_requests_path
        %ul.nav.navbar-nav.navbar-right
          %li= render 'devise/menu/login_items'
      - else
        %ul.nav.navbar-nav.navbar-right
          %li= render 'devise/menu/login_items'
