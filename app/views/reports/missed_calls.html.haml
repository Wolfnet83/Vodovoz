= form_tag '/reports/missed_calls',:method => "get",:class => "well form-inline" do
  .form-group
    = label_tag :date, "Дата", :class => "span3"
    = text_field_tag :date, @date, class: "form-control"
  .form-group
    = label_tag :hour, "Час", :class => "span3"
    = text_field_tag :hour, @hour, class: "form-control"
  = submit_tag("Выбрать", :class => 'btn btn-default')
%table.table.table-striped.table-bordered.table-condensed
  %thead
    %tr
      %th Время
      %th Номер пропущенного звонка
      %th Продолжительность
  - @calls.each do |call|
    %tr
      %td= call.calldate
      %td= call.src
      %td= call.billsec
